<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nvarelas.nick.cursivemadeeasy"
    >
    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:largeScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.nvarelas.nick.cursivemadeeasy.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nvarelas.nick.cursivemadeeasy.TraceActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nvarelas.nick.cursivemadeeasy.FinishActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nvarelas.nick.cursivemadeeasy.GameActivity"
            android:screenOrientation="portrait"></activity>

        <service
            android:name="com.nvarelas.nick.cursivemadeeasy.MusicService"
            android:enabled="true" />
        <service
            android:name="com.nvarelas.nick.cursivemadeeasy.GameService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>